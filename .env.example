# TenderAI MCP Server Configuration

# Transport: "stdio" for local, "http" for remote
TRANSPORT=stdio
HOST=0.0.0.0
PORT=8000

# Authentication (required for http transport)
MCP_API_KEY=change-me-to-a-secure-token

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...
LLM_MODEL=claude-sonnet-4-5-20241022
LLM_MAX_TOKENS=4096

# Voyage AI Embeddings (optional â€” enables vector search for past proposals)
VOYAGE_API_KEY=pa-...
EMBEDDING_MODEL=voyage-3-lite
EMBEDDING_DIMENSIONS=512

# Database
DATABASE_PATH=db/tenderai.db

# Data directories
DATA_DIR=data

# Company defaults
COMPANY_NAME=Your Company
DEFAULT_CURRENCY=OMR
DEFAULT_MARGIN_PCT=15

# Logging
LOG_LEVEL=INFO
